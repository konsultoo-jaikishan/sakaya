                                        <t t-foreach="deliveries" t-as="delivery">
                                            <li class="list-group-item o_delivery_carrier_select">
                                                <t t-call="website_sale_delivery.payment_delivery_methods"/>
                                            </li>
                                        </t>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </t>
            </table>
        </xpath>
    </template>


    <template id="sakaya_payment_payment_delivery_inherit" inherit_id="website_sale_delivery.payment_delivery">
        <xpath expr="//ul[hasclass('list-group')]" position="replace">
            <ul class="list-group">
                <t t-if="len(delivery_result) > 0">
                    <t t-foreach="deliveries" t-as="delivery">

                        <t t-if="delivery.id in delivery_result">
                            <li class="list-group-item o_delivery_carrier_select">
                                <t t-call="website_sale_delivery.payment_delivery_methods"/>
                            </li>
                        </t>
                    </t>
                </t>
                <t t-else="">
                    <h6 class="bg-danger">Not delivered</h6>
                </t>
            </ul>
        </xpath>
    </template>


    <template id="sakaya_payment_delivery_checkbox_inherit" inherit_id="website_sale_delivery.payment_delivery_methods">
        <xpath expr="//input[@name='delivery_type']" position="replace">
            <t t-if="merchant">
                <input t-att-value="delivery.id" t-att-merchant="merchant.id" t-att-id="'delivery_%i' % delivery.id"
                       type="radio"
                       t-att-name="'delivery_type_%i' % merchant.id"
                       t-att-class="'d-none' if delivery_nb == 1 else ''"/>
            </t>
        </xpath>
    </template>

    <template id="sakaya_address_city_field_m2o" inherit_id="website_sale.address">
        <xpath expr="//input[@name='city']" position="replace">
            <!--            <input type="text" name="city" t-attf-class="form-control #{error.get('city') and 'is-invalid' or ''}" t-att-value="'city' in checkout and checkout['city']" />-->
            <t t-set="city_ids"
               t-value="request.env['x_city'].sudo().search([])"/>
            <select class="form-control nationality_selection" name="city">
                <t t-foreach="city_ids" t-as="city_id">
                    <option t-att-value="city_id.id"
                            t-att-selected="city_id.id == (website_sale_order.partner_id.x_studio_city.id or -1)">
                        <t t-esc="city_id.x_name"/>
                    </option>
                </t>
            </select>
        </xpath>
    </template>
</odoo>
