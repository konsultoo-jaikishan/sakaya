<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_zonos" model="ir.ui.view">
        <field name="name">res.company.form.inherit.zonos</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Zonos Configuration">
                    <group>
                        <field name="use_zonos"/>
                        <field name="zonos_service_token"
                               attrs="{'required': [('use_zonos', '=', True)],'invisible': [('use_zonos', '=', False)]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
